<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="iisnode" path="backend/server.js" verb="*" modules="iisnode" />
    </handlers>
    <rewrite>
      <rules>
        <!-- Rule 1: Exclude Node Inspector -->
        <rule name="NodeInspector" patternSyntax="ECMAScript" stopProcessing="true">
          <match url="^backend/server.js\/debug[\/]?" />
        </rule>

        <!-- Rule 2: Serve existing static files (JS, CSS, Images, Fonts etc.) directly -->
        <!-- This rule stops processing if a file exists -->
        <rule name="StaticFiles" stopProcessing="true">
          <match url=".*" />
          <conditions logicalGrouping="MatchAll">
            <!-- Check if the request is for an actual file -->
            <add input="{REQUEST_FILENAME}" matchType="IsFile" />
            <!-- Exclude the backend server file itself -->
            <add input="{REQUEST_URI}" pattern="^/backend/server.js" negate="true" />
          </conditions>
          <!-- Do nothing, let IIS serve the static file -->
          <action type="None" />
        </rule>

        <!-- Rule 3: Route API requests to the Node.js backend -->
        <rule name="DynamicContent-API" stopProcessing="true">
          <match url="^api(/.*)?$" />
          <!-- Rewrite to the Node.js entry point -->
          <action type="Rewrite" url="backend/server.js" />
        </rule>

        <!-- Rule 4: Fallback for Client-Side Routing (SPA) -->
        <!-- Handles requests that are not for existing files and not API calls -->
        <rule name="ClientFallback">
          <match url=".*" />
          <conditions logicalGrouping="MatchAll">
            <!-- Ensure it's not a file -->
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <!-- Ensure it's not a directory -->
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
            <!-- Ensure it's not an API call -->
            <add input="{REQUEST_URI}" pattern="^/api/" negate="true" />
             <!-- Exclude the backend server file itself -->
            <add input="{REQUEST_URI}" pattern="^/backend/server.js" negate="true" />
          </conditions>
          <!-- Rewrite to the main HTML file for the frontend app to handle routing -->
          <action type="Rewrite" url="index.html" />
        </rule>
      </rules>
    </rewrite>

    <!-- Ensure the Node.js app has enough memory and doesn't time out too quickly -->
    <iisnode 
             watchedFiles="web.config;*.js;backend/**/*.js"
             loggingEnabled="true"
             logDirectory="iisnode"
             debuggingEnabled="false"
             maxNamedPipeConnectionRetry="100"
             namedPipeConnectionRetryDelay="250"
             maxProcessCountPerApplication="1"
             maxConcurrentRequestsPerProcess="1024"
             requestQueueLength="5000" />

    <!-- Make sure error responses are left untouched -->
    <httpErrors existingResponse="PassThrough" />
  </system.webServer>
</configuration> 